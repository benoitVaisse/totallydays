@model Totallydays.ViewsModel.FormCommentViewModel;
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="modal fade booking_comment_modal_lg" id="booking_comment_modal_lg" tabindex="-1" role="dialog" aria-labelledby="booking_comment_modal_lg" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Laisser un commentaire</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5 id="modal-booking-title"></h5>
                <h5 id="modal-booking-date"></h5>
                <form id="form-booking-comment">
                    <div>
                        <input type="hidden" asp-for="BookingId" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Rating"></label>
                        <input asp-for="Rating" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Comment"></label>
                        <textarea asp-for="Comment" class="form-control">
                        </textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-info">Valider le commentaire</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
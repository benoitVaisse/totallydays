
@model IEnumerable<Equipment_type>;
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="list-e">
    @if (Model.Count() > 0)
    {
        @foreach (Equipment_type t in Model)
        {
            <div>
                <h3> @t.Name </h3>
                <div class="liste-e one-type" data-parent="@t.Equipment_type_id">
                    @foreach (Equipment e in t.Equipments)
                    {
                        <span class="e-single" data-id="@e.Equipment_id"> @e.Name </span>
                    }
                </div>
                
            </div>

        }
    }
    else
    {
        <span> Aucun équipement </span>
    }

</div>


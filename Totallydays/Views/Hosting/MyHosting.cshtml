@model IEnumerable<Hosting>;
@{
    ViewData["Title"] = "MyHosting";
}

<h1>Mes Hébergements</h1>

<div>
    <div class="create-block">
        <a class="btn btn-primary" asp-route="hosting_create"> Créer une annonce </a>
    </div>
    <div class="hosting-list">

        @if(Model.Count() > 0)
        {
            <div class="my-hostings">
                @foreach (Hosting h in Model)
                {
                    <div class="single-hosting-list">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="~/img/hosting/coverImage/@h.Cover_image" alt="image @h.Title">
                            <div class="card-body">
                                <h5 class="card-title">@h.Title</h5>
                                <p class="card-text">@h.Resume</p>
                                <div>
                                    <a asp-route="hosting_view" asp-route-slug="@h.Slug" class="btn btn-primary">Voir</a>
                                    <a asp-route="hosting_modified"  asp-route-id="@h.Hosting_id" btn-warning">Modifier</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>Vous n'avez aucun hébergement</p>
        }

    </div>
</div>


@model IEnumerable<Equipment>;
@{ 

}

    <div>
        <h3>Veuillez selectionné vos equipements pésent dans votre hébergement</h3>
        <div class="text-left">
            <a href="#" class="btn btn-info hosting-creation" data-target="#hosting-creation-chambre" data-parent="#hosting-creation-equipment"> précedent </a>
        </div>

        <form id="hosting-equipment">

            <div class="equipments-add">
                @foreach (Equipment e in Model)
                {
                    bool check = this.ViewBag.listeE.Contains(e.Equipment_id);
                    <div class="">
                        <input type="checkbox" value="@e.Equipment_id" name="equipments[]" class="" id="equipment-@e.Equipment_id" @(check ?"checked = \"checked\"":"")/>
                        <label for="equipment-@e.Equipment_id"> @e.Name </label>
                    </div>
                }

            </div>
            <input type="submit" value="Ajout des Equipments" class="btn btn-info" />
        </form>

        <div class="link-return-my-hosting">
            <a asp-route="my_hostings"> Liste de mes hébergements </a>
        </div>
    </div>
